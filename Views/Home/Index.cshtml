@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <h2>Choose an option below to get started:</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Sign Up</h3>
            <p>Don't have an account? Sign up now!</p>
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Sign Up</a>
        </div>
        <div class="col-md-6">
            <h3>Log In</h3>
            <p>Already have an account? Log in here!</p>
            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-success">Log In</a>
        </div>
    </div>
</div>
